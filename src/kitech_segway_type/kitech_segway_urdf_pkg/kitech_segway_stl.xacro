<?xml version="1.0"?>

<robot name="kitech_segway_type" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Include materials -->

    <material name="Black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <material name="Red">
        <color rgba="0.8 0.0 0.0 1.0"/>
    </material>

    <material name="White">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>


  <xacro:property name="deg_to_rad" value="0.01745329251994329577"/>


  <!-- Folder Setting -->
  <!-- small stl:huboq_mani_stl-small, original stl:huboq_mani_stl -->
  <xacro:property name="stl_folder" value="huboq_mani_stl-small"/>


  <!-- Constants -->
  <xacro:property name="M_SCALE" value="0.001 0.001 0.001"/> 
  <xacro:property name="M_PI" value="3.14159"/>

  <!-- Link Properties -->
  <xacro:property name="mp_body_length" value="0.4" />
  <xacro:property name="mp_body_width" value="0.4" />
  <xacro:property name="mp_body_height" value="0.3" />

  <xacro:property name="mp_wheel_length" value="0.04" />
  <xacro:property name="mp_wheel_radius" value="0.19" />

  <!-- Inertia Properties -->
	<xacro:macro name="inertial_matrix" params="mass">
               <inertial>
                       <mass value="${mass}" />
                       <inertia ixx="0.5" ixy="0.0" ixz="0.0"
                                iyy="0.5" iyz="0.0"
                                izz="0.5" />
               </inertial>
	</xacro:macro>

  <!-- BASE-FOOTPRINT -->
  <!-- base_footprint is a fictitious link(frame) that is on the ground right below base_link origin -->
  <link name="base_footprint">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
          iyy="0.0001" iyz="0.0" 
          izz="0.0001" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <box size="0.001 0.001 0.001" />
        </geometry>
    </visual>
  </link>

  <gazebo reference="base_footprint">
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="mp_body" />
  </joint>

 <link name="mp_body">
    <visual>
      <geometry>
        <mesh filename="package://kitech_segway_urdf_pkg/mesh/Segway Type_rev3_body.stl" scale="0.001 0.001 0.001"/>
      </geometry>
        <origin rpy="0 0 0" xyz="1.5 0.1155 0"/>
      <material name="green">
        <color rgba="0 0.7 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
	      <box size="${mp_body_length} ${mp_body_width} ${mp_body_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.2"/>
    </collision>

	  <xacro:inertial_matrix mass="1"/>
  </link>

  <gazebo reference="mp_body">
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <link name="mp_left_wheel">
    <visual>
      <geometry>
        <mesh filename="package://kitech_segway_urdf_pkg/mesh/wheel_0.35.stl" scale="0.001 0.001 0.001"/>
      </geometry>
        <origin rpy="${90.*M_PI/180.} 0 0" xyz="0.03 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
	      <cylinder length="${mp_wheel_length}" radius="${mp_wheel_radius}"/>
      </geometry>
      <origin rpy="${90.*M_PI/180.} 0 0" xyz="0 0.01 0"/>
    </collision>

	  <xacro:inertial_matrix mass="1"/>
  </link>

  <joint name="mp_left_wheel_joint" type="continuous">
    <parent link="mp_body"/>
    <child link="mp_left_wheel"/>
    <origin xyz="-0.078 0.232 0.19"/>
    <axis xyz="0 1 0" />
  </joint>

  <link name="mp_right_wheel">
    <visual>
      <geometry>
        <mesh filename="package://kitech_segway_urdf_pkg/mesh/wheel_0.35.stl" scale="0.001 0.001 0.001"/>
      </geometry>
        <origin rpy="${-90.*M_PI/180.} 0 0" xyz="0.03 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
	      <cylinder length="${mp_wheel_length}" radius="${mp_wheel_radius}"/>
      </geometry>
      <origin rpy="${-90.*M_PI/180.} 0 0" xyz="0 -0.01 0"/>
    </collision>

	  <xacro:inertial_matrix mass="1"/>
  </link>

  <joint name="mp_right_wheel_joint" type="continuous">
    <parent link="mp_body"/>
    <child link="mp_right_wheel"/>
    <origin xyz="-0.078 -0.232 0.19"/>
    <axis xyz="0 1 0" />
  </joint>

 <!-- ros_control plugin -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/6dof_huboq</robotNamespace>
    </plugin>
  </gazebo>



</robot>
